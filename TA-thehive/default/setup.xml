<setup>

  <block title="(Optional) Define TheHive server parameters" endpoint="thehive/customendpoint" entity="thehivesetup">
    <input field="thehive_url">
      <label>TheHive API url:</label>
      <type>text</type>
    </input>
    <input field="thehive_key" endpoint="thehive/customendpoint" entity="thehivesetup">
      <label>API auth key - You should create an account with only the role create alerts</label>
      <type>text</type>
    </input>
    <input field="thehive_verifycert" endpoint="thehive/customendpoint" entity="thehivesetup">
      <label>Check SSL certificate of TheHive server</label>
      <type>bool</type>
    </input>  
  </block>
  <block title="(Optional) proxy parameters if needed - leave empty if no proxy required. Use the syntax http://user:pass@proxyhost:port/" endpoint="thehive/customendpoint" entity="thehivesetup">
    <input field="http_proxy">
      <label>http url:</label>
      <type>text</type>
    </input>
    <input field="https_proxy" endpoint="thehive/customendpoint" entity="thehivesetup">
      <label>https url</label>
      <type>text</type>
    </input>
  </block>

</setup>