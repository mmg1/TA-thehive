<setup>
  <block title="(Optional) Define TheHive server parameters" endpoint="admin/thehive" entity="thehivesetup">
    <input field="thehive_url">
      <label>TheHive API url:</label>
      <type>text</type>
    </input>
    <input field="thehive_key" endpoint="admin/thehive" entity="thehivesetup">
      <label>API auth key - You should create an account with only the role create alerts</label>
      <type>text</type>
    </input>
    <input field="thehive_verifycert" endpoint="admin/thehive" entity="thehivesetup">
      <label>Check SSL certificate of TheHive server</label>
      <type>bool</type>
    </input>  
    <input field="thehive_use_proxy" endpoint="admin/thehive" entity="thehivesetup">
      <label>Use proxy for this instance</label>
      <type>bool</type>
    </input>  
  </block>
  <block title="(Optional) use a client certificate as a single file (containing the private key and the certificate) 
" endpoint="admin/thehive/" entity="thehivesetup">
    <input field="client_use_cert" endpoint="admin/thehive/" entity="thehivesetup">
      <label>Use a client certificate to authenticate on default instance</label>
      <type>bool</type>
    </input>
    <input field="client_cert_full_path" endpoint="admin/thehive/" entity="thehivesetup">
      <label>Provide full path to client certificate file </label>
      <type>text</type>
    </input>
  </block>  
  <block title="(Optional) proxy parameters if needed - leave empty if no proxy required. Use the syntax http://user:pass@proxyhost:port/" endpoint="admin/thehive" entity="thehivesetup">
    <input field="http_proxy">
      <label>http url:</label>
      <type>text</type>
    </input>
    <input field="https_proxy" endpoint="admin/thehive" entity="thehivesetup">
      <label>https url</label>
      <type>text</type>
    </input>
  </block>
</setup>